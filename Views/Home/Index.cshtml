@{
    ViewData["Title"] = "Amazon Books";
}

@model IQueryable<Book>
@*Index page. LAnding page of the site that displays the site name and currently the books in the database.*@
<header>
    <div>
        <h1>Amazon's Online Books</h1>
    </div>
</header>
<div>
    @foreach (var x in Model)
    {
        <div>
            <h4 class="font-weight-bold">@x.Title</h4>
            <p>Author: @x.Author</p>
            <p>Publisher: @x.Publisher</p>
            <p>ISBN: @x.ISBN</p>
            <p>Category: @x.Category</p>
            <p>Price: $@x.Price</p>
        </div>
    }
</div>
